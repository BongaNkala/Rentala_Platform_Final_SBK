/* Ensure header layout (reinforce) */
header, .header, .navbar {
    display: flex !important;
    align-items: center !important;
    padding: 0 20px !important;
}

/* Search bar adjustments */
[class*="search"] {
    flex-grow: 1;
    max-width: 400px;
    margin-right: 20px;
}

/* Notification Button */
.notification-btn {
    width: 45px;
    height: 45px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    color: var(--gray);
    font-size: 18px;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    backdrop-filter: blur(10px);
}

.notification-btn:hover {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.3);
}

.notification-badge {
    position: absolute;
    top: -4px;
    right: -4px;
    background: var(--danger);
    color: white;
    font-size: 10px;
    font-weight: 600;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(255, 255, 255, 0.1);
}

/* Stats Cards */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 20px;
    margin-bottom: 35px;
}

.stat-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 18px;
    padding: 25px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.stat-card:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: var(--shadow-lg);
    background: rgba(255, 255, 255, 0.12);
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
}

.stat-card:nth-child(2)::before {
    background: linear-gradient(90deg, var(--accent), #3ab5d9);
}

.stat-card:nth-child(3)::before {
    background: linear-gradient(90deg, var(--success), #22c55e);
}

.stat-card:nth-child(4)::before {
    background: linear-gradient(90deg, var(--warning), #f59e0b);
}

.stat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 18px;
}

.stat-icon {
    width: 55px;
    height: 55px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-change {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 13px;
    font-weight: 600;
    padding: 5px 10px;
    border-radius: 15px;
    background: rgba(76, 201, 240, 0.1);
    color: var(--accent);
}

.stat-change.positive {
    background: rgba(74, 222, 128, 0.1);
    color: var(--success);
}

.stat-change.negative {
    background: rgba(239, 68, 68, 0.1);
    color: var(--danger);
}

.stat-value {
    font-size: 32px;
    font-weight: 700;
    color: white;
    margin-bottom: 6px;
    font-family: 'Poppins', sans-serif;
}

.stat-label {
    font-size: 14px;
    color: var(--gray);
}

/* Content Grid */
.content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 25px;
    margin-bottom: 35px;
}

/* Chart Container */
.chart-container {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 18px;
    padding: 25px;
    border: 1px solid rgba(255, 255, 255, 0.15);
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
}

.chart-header h3 {
    font-size: 18px;
    font-weight: 600;
    color: white;
}

.chart-period {
    display: flex;
    gap: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 4px;
}

.period-btn {
    padding: 7px 14px;
    border: none;
    background: transparent;
    color: var(--gray);
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
    font-weight: 500;
    transition: var(--transition);
}

.period-btn.active {
    background: rgba(67, 97, 238, 0.2);
    color: white;
}

.period-btn:hover:not(.active) {
    background: rgba(255, 255, 255, 0.05);
    color: white;
}

.chart-canvas-container {
    height: 280px;
    position: relative;
}

/* Activities Container */
.activities-container {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 18px;
    padding: 25px;
    border: 1px solid rgba(255, 255, 255, 0.15);
}

.activities-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.activities-header h3 {
    font-size: 18px;
    font-weight: 600;
    color: white;
}

.view-all {
    color: var(--primary);
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    padding: 7px 14px;
    border-radius: 8px;
    background: rgba(67, 97, 238, 0.1);
    border: 1px solid rgba(67, 97, 238, 0.2);
    transition: var(--transition);
    cursor: pointer;
}

.view-all:hover {
    background: rgba(67, 97, 238, 0.2);
    transform: translateY(-2px);
}

.activity-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.activity-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 18px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: var(--transition);
}

.activity-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateX(3px);
}

.activity-icon {
    width: 45px;
    height: 45px;
    background: rgba(67, 97, 238, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    color: var(--primary);
    border: 1px solid rgba(67, 97, 238, 0.2);
}

.activity-details h4 {
    font-size: 14px;
    font-weight: 600;
    color: white;
    margin-bottom: 4px;
}

.activity-details p {
    font-size: 12px;
    color: var(--gray);
}

.activity-time {
    margin-left: auto;
    font-size: 11px;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 500;
}

/* Properties Grid */
.properties-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
}

.property-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 18px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.15);
    transition: var(--transition);
}

.property-card:hover {
    transform: translateY(-6px);
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: var(--shadow-lg);
}

.property-image {
    height: 160px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    position: relative;
    overflow: hidden;
}

.property-status {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: 5px 12px;
    border-radius: 15px;
    font-size: 11px;
    font-weight: 600;
    backdrop-filter: blur(10px);
}

.status-occupied {
    background: rgba(239, 68, 68, 0.2);
    color: var(--danger);
    border: 1px solid rgba(239, 68, 68, 0.3);
}

.status-vacant {
    background: rgba(74, 222, 128, 0.2);
    color: var(--success);
    border: 1px solid rgba(74, 222, 128, 0.3);
}

.property-content {
    padding: 22px;
}

.property-title {
    font-size: 17px;
    font-weight: 600;
    color: white;
    margin-bottom: 8px;
}

.property-location {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--gray);
    font-size: 13px;
    margin-bottom: 18px;
}

.property-stats {
    display: flex;
    justify-content: space-between;
    margin-bottom: 18px;
    padding-bottom: 18px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.property-stat {
    text-align: center;
}

.stat-number {
    font-size: 18px;
    font-weight: 700;
    color: white;
    margin-bottom: 4px;
}

.stat-label {
    font-size: 11px;
    color: var(--gray);
    text-transform: uppercase;
    letter-spacing: 0.8px;
}

.property-actions {
    display: flex;
    gap: 8px;
}

.property-btn {
    flex: 1;
    padding: 11px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border-radius: 8px;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    backdrop-filter: blur(10px);
}

.property-btn:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
}

.property-btn.primary {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    border: none;
}

.property-btn.primary:hover {
    background: linear-gradient(135deg, var(--primary-dark), #2f46b3);
}

/* Footer */
.dashboard-footer {
    margin-top: 40px;
    padding-top: 25px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: var(--gray);
    font-size: 13px;
}

.footer-links {
    display: flex;
    justify-content: center;
    gap: 25px;
    margin-bottom: 15px;
}

.footer-links a {
    color: var(--gray);
    text-decoration: none;
    transition: var(--transition);
}

.footer-links a:hover {
    color: white;
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    z-index: 1000;
    align-items: center;
    justify-content: center;
}

.modal-content {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(30px);
    border-radius: 25px;
    padding: 35px;
    width: 90%;
    max-width: 480px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: var(--shadow-lg);
    animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.modal-header h3 {
    font-size: 22px;
    color: white;
    font-weight: 600;
}

.modal-close {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: var(--gray);
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: var(--transition);
}

.modal-close:hover {
    background: rgba(255, 255, 255, 0.15);
    color: white;
}

/* Form Styles */
.form-group {
    margin-bottom: 20px;
}

.form-label {
    display: block;
    margin-bottom: 8px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    font-size: 14px;
}

.form-input {
    width: 100%;
    padding: 14px 18px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: white;
    font-size: 14px;
    backdrop-filter: blur(10px);
    transition: var(--transition);
}

.form-input:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.15);
}

.form-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.modal-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
}

.btn {
    padding: 14px 25px;
    border: none;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    flex: 1;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    color: white;
}

.btn-primary:hover {
    background: linear-gradient(135deg, var(--primary-dark), #2f46b3);
    transform: translateY(-2px);
}

.btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}

/* Toast Notification */
.toast {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border-radius: 15px;
    padding: 18px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    gap: 15px;
    transform: translateX(150%);
    transition: transform 0.3s ease;
    z-index: 1001;
    max-width: 380px;
}

.toast.show {
    transform: translateX(0);
}

.toast-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
}

.toast-success .toast-icon {
    background: rgba(74, 222, 128, 0.2);
    color: var(--success);
}

.toast-error .toast-icon {
    background: rgba(239, 68, 68, 0.2);
    color: var(--danger);
}

.toast-info .toast-icon {
    background: rgba(76, 201, 240, 0.2);
    color: var(--accent);
}

.toast-content h4 {
    font-size: 15px;
    font-weight: 600;
    margin-bottom: 5px;
    color: white;
}

.toast-content p {
    font-size: 13px;
    color: var(--gray);
}

/* Loading Spinner */
.loading {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    z-index: 2000;
    align-items: center;
    justify-content: center;
}

.loading.show {
    display: flex;
}

.spinner {
    width: 60px;
    height: 60px;
    border: 4px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    border-top-color: var(--primary);
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* Menu Toggle */
.menu-toggle {
    display: none;
    width: 45px;
    height: 45px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    color: var(--gray);
    font-size: 18px;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    margin-right: 12px;
}

/* Content Header */
.content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
}

.content-header h2 {
    font-size: 22px;
    color: white;
    font-weight: 600;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .content-grid {
        grid-template-columns: 1fr;
    }
    
    .sidebar {
        width: 240px;
    }
    
    .main-content {
        margin-left: 240px;
    }
    
    .bg-app-name {
        font-size: 120px;
    }
}

@media (max-width: 992px) {
    .sidebar {
        transform: translateX(-100%);
        width: 260px;
    }
    
    .sidebar.active {
        transform: translateX(0);
    }
    
    .main-content {
        margin-left: 0;
        padding: 25px 18px;
    }
    
    .menu-toggle {
        display: flex;
    }
    
    .bg-app-name {
        font-size: 100px;
    }
    
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .properties-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .properties-grid {
        grid-template-columns: 1fr;
    }
    
    .header-actions {
        flex-wrap: wrap;
    }
    
    .search-box {
        width: 100%;
        order: 3;
        margin-top: 12px;
    }
    
    .bg-app-name {
        font-size: 80px;
    }
    
    .top-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }
    
    .header-actions {
        width: 100%;
        justify-content: space-between;
    }
    
    .content-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }
    
    .content-header h2 {
        font-size: 20px;
    }
    
    .btn {
        width: 100%;
    }
}

@media (max-width: 576px) {
    .main-content {
        padding: 20px 15px;
    }
    
    .stat-card {
        padding: 20px;
    }
    
    .chart-container,
    .activities-container {
        padding: 20px;
    }
    
    .modal-content {
        padding: 25px;
        margin: 15px;
    }
    
    .bg-app-name {
        font-size: 60px;
    }
    
    .footer-links {
        flex-direction: column;
        gap: 12px;
    }
    
    .nav-item span {
        font-size: 13px;
    }
    
    .nav-item i {
        font-size: 16px;
    }
    
    .stat-value {
        font-size: 28px;
    }
    
    .property-title {
        font-size: 16px;
    }
    
    .property-btn {
        font-size: 12px;
        padding: 10px;
    }
}

@media (max-width: 480px) {
    .sidebar {
        width: 240px;
    }
    
    .bg-app-name {
        font-size: 50px;
        letter-spacing: 2px;
    }
    
    .page-title h1 {
        font-size: 24px;
    }
    
    .page-title p {
        font-size: 13px;
    }
    
    .stat-icon {
        width: 50px;
        height: 50px;
        font-size: 22px;
    }
    
    .activity-item {
        padding: 15px;
    }
    
    .activity-icon {
        width: 40px;
        foont-size: 16px;
   }
.property-image {
    height: 140px;
}

.property-content {
    padding: 18px;
}

.modal-actions {
    flex-direction: column;
}

.btn {
    width: 100%;
}

.toast {
    right: 15px;
    left: 15px;
    max-width: calc(100vw - 30px);
}
/* Text Overflow Prevention */
.text-truncate {
white-space: nowrap;
overflow: hidden;
text-overflow: ellipsis;
}

.text-wrap {
word-wrap: break-word;
overflow-wrap: break-word;
}

/* Line Height Fixes */
h1, h2, h3, h4, h5, h6 {
line-height: 1.2;
}

p, span, div, a {
line-height: 1.4;
}

/* Flexbox Fixes */
.flex-shrink-0 {
flex-shrink: 0;
}

.flex-grow-1 {
flex-grow: 1;
}

.min-width-0 {
min-width: 0;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
width: 6px;
height: 6px;
}

::-webkit-scrollbar-track {
background: rgba(255, 255, 255, 0.05);
border-radius: 3px;
}

::-webkit-scrollbar-thumb {
background: rgba(255, 255, 255, 0.2);
border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
background: rgba(255, 255, 255, 0.3);
}

/* Image Fixes */
img {
max-width: 100%;
height: auto;
}

/* Button Spacing Fix */
.btn + .btn {
margin-left: 8px;
}

@media (max-width: 768px) {
.btn + .btn {
margin-left: 0;
margin-top: 8px;
}
}

/* Chart Responsive Fix */
.chart-canvas-container canvas {
max-width: 100%;
height: auto !important;
}

/* Form Field Spacing */
.form-group:last-child {
margin-bottom: 0;
}

/* Modal Scroll Fix */
.modal-content {
max-height: 90vh;
overflow-y: auto;
}

/* Loading Overlay Fix */
.loading {
position: fixed;
top: 0;
left: 0;
right: 0;
bottom: 0;
}

/* Z-index Stacking */
.sidebar { z-index: 1000; }
.modal { z-index: 2000; }
.toast { z-index: 3000; }
.loading { z-index: 4000; }

/* Print Styles */
