}

.search-box input:focus {
    outline: none !important;
}

.search-btn {
    background: transparent !important;
    border: none !important;
    color: var(--gray) !important;
    cursor: pointer !important;
    padding: 0 !important;
    margin-left: 10px !important;
}

.search-btn:hover {
