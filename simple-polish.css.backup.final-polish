    backdrop-filter: blur(12px) saturate(170%) !important;
    -webkit-backdrop-filter: blur(12px) saturate(170%) !important;
    border: 1px solid rgba(255, 255, 255, 0.18) !important;
    border-radius: var(--radius-md) !important;
    box-shadow: 
        0 4px 20px rgba(0, 0, 0, 0.06),
        inset 0 1px 0 rgba(255, 255, 255, 0.08) !important;
}

/* Form elements */
.form-group:not(.glass-transparent) {
    background: rgba(255, 255, 255, 0.06) !important;
    backdrop-filter: blur(8px) !important;
    -webkit-backdrop-filter: blur(8px) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: var(--radius-md) !important;
    padding: var(--space-md) !important;
    margin-bottom: var(--space-md) !important;
}

/* Headers and sections */
.header:not(.glass-container):not(.glass-card):not(.glass-frosted),
.page-header:not(.glass-container):not(.glass-card):not(.glass-frosted),
.section-header:not(.glass-container):not(.glass-card):not(.glass-frosted) {
    background: rgba(255, 255, 255, 0.15) !important;
    backdrop-filter: blur(20px) saturate(180%) !important;
    -webkit-backdrop-filter: blur(20px) saturate(180%) !important;
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
    border-radius: var(--radius-lg) !important;
    box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.1) !important;
}

/* Table containers */
.table-container:not(.glass-light):not(.glass-medium) {
    background: rgba(255, 255, 255, 0.08) !important;
    backdrop-filter: blur(10px) !important;
    -webkit-backdrop-filter: blur(10px) !important;
    border: 1px solid rgba(255, 255, 255, 0.12) !important;
    border-radius: var(--radius-md) !important;
    overflow: hidden !important;
}

/* Control panels */
.controls:not(.glass-transparent):not(.glass-light) {
    background: rgba(255, 255, 255, 0.1) !important;
    backdrop-filter: blur(12px) !important;
    -webkit-backdrop-filter: blur(12px) !important;
    border: 1px solid rgba(255, 255, 255, 0.15) !important;
    border-radius: var(--radius-md) !important;
    padding: var(--space-md) !important;
}

/* Search containers */
.search-container:not(.glass-transparent) {
    background: rgba(255, 255, 255, 0.08) !important;
    backdrop-filter: blur(8px) !important;
    -webkit-backdrop-filter: blur(8px) !important;
    border: 1px solid rgba(255, 255, 255, 0.12) !important;
    border-radius: var(--radius-md) !important;
}

/* Button groups */
.btn-group:not(.glass-transparent) {
    background: rgba(255, 255, 255, 0.06) !important;
    backdrop-filter: blur(5px) !important;
    -webkit-backdrop-filter: blur(5px) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: var(--radius-md) !important;
    padding: var(--space-sm) !important;
}

/* ==================== GLASS ELEMENT INTERACTIONS ==================== */

/* Hover effects for glass elements */
.container:hover,
.content-container:hover,
.main-container:hover,
.card:hover,
.tenant-card:hover,
.property-card:hover,
.header:hover,
.page-header:hover,
.section-header:hover {
    transform: translateY(-2px) !important;
    transition: all var(--transition-normal) !important;
}

/* Glass element transitions */
.container,
.content-container,
.main-container,
.card,
.tenant-card,
.property-card,
.header,
.page-header,
.section-header,
.table-container,
.controls,
.search-container,
.btn-group {
    transition: all var(--transition-normal) !important;
}

/* Depth effect with multiple shadows */
.glass-depth {
    box-shadow: 
        0 1px 1px rgba(0, 0, 0, 0.05),
        0 2px 2px rgba(0, 0, 0, 0.05),
        0 4px 4px rgba(0, 0, 0, 0.05),
        0 8px 8px rgba(0, 0, 0, 0.05),
        0 16px 16px rgba(0, 0, 0, 0.05),
        inset 0 1px 0 rgba(255, 255, 255, 0.1) !important;
}

/* Subtle glow effect for focused elements */
.glass-glow:focus-within,
.glass-glow:hover {
    box-shadow: 
        0 0 0 1px rgba(255, 255, 255, 0.2),
        0 0 0 3px rgba(67, 97, 238, 0.1),
        0 8px 32px rgba(0, 0, 0, 0.12) !important;
}

/* Layered glass effect for modals and overlays */
.glass-layered {
    position: relative !important;
}

.glass-layered::before {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.05) 0%,
        rgba(255, 255, 255, 0.02) 100%
    ) !important;
    border-radius: inherit !important;
    pointer-events: none !important;
    z-index: 1 !important;
}

