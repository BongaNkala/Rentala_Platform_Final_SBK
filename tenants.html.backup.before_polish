    <!-- Dashboard integration script -->
    <script>
        // Listen for messages from dashboard
        window.addEventListener('message', function(event) {
            if (event.data.type === 'DASHBOARD_REFRESH_REQUEST') {
                loadTenants();
                loadTenantStats();
            }
        });
        
        // Listen for storage events (cross-tab communication)
        window.addEventListener('storage', function(event) {
            if (event.key === 'rentala_tenant_update') {
                loadTenants();
                loadTenantStats();
            }
        });
        
        // Listen for custom tenant data changed event
        window.addEventListener('tenantDataChanged', function() {
            loadTenants();
            loadTenantStats();
        });
        
        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Update tenant count in navigation
            const updateNavCount = () => {
                const tenants = JSON.parse(localStorage.getItem('rentala_tenants') || '[]');
                const countElement = document.getElementById('tenantNavCount');
                if (countElement && tenants.length > 0) {
                    countElement.textContent = tenants.length;
                }
            };
            
            updateNavCount();
            
            // Update every 30 seconds
            setInterval(updateNavCount, 30000);
            
            // Mobile menu toggle
            const menuToggle = document.getElementById('menuToggle');
            const sidebar = document.getElementById('sidebar');
            
            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', () => {
                    sidebar.classList.toggle('active');
                });
            }
            
            // View toggle buttons
            document.querySelectorAll('.view-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.view-btn').forEach(b => {
                        b.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    const view = this.getAttribute('data-view');
                    toggleViewMode(view);
                });
            });
            
            // Sort select
            const sortSelect = document.querySelector('.sort-select');
            if (sortSelect) {
                sortSelect.addEventListener('change', function() {
                    sortTenants(this.value);
                });
            }
        });
        
        function toggleViewMode(view) {
            const container = document.getElementById('tenantsContainer');
            if (!container) return;
            
            if (view === 'list') {
                container.classList.add('list-view');
                container.classList.remove('grid-view');
            } else {
                container.classList.add('grid-view');
                container.classList.remove('list-view');
            }
            
            // Store preference
            localStorage.setItem('tenant_view_mode', view);
        }
        
        function sortTenants(sortBy) {
            // This would implement sorting logic
            console.log('Sorting by:', sortBy);
        }
    </script>
